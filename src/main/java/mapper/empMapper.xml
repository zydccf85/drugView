<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.EmpDao">
  
  <select id="selectCount" resultType="int">
   select count(*) from employees
  </select>
  
  <select id="getAll" resultType="entity.Emp">
  	select * from employees
  </select>
  
  <select id="findByCondition" parameterType="entity.Condition" resultType="entity.Emp">
  	select * from (select a1.*,rownum rn from (select * from employees) a1
  	 where rownum &lt;= (#{page}*#{row})) where rn &gt;= (#{page}-1)*#{row}
  </select>
  
</mapper>